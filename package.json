{
  "name": "equal-ds-ui",
  "version": "1.0.4",
  "description": "Equal Design System UI components based on shadcn + Radix + Tailwind",
  "author": "Equal DS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/equal-ds-ui.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/equal-ds-ui/issues"
  },
  "homepage": "https://github.com/your-org/equal-ds-ui#readme",
  "keywords": [
    "react",
    "design-system",
    "tailwind",
    "radix",
    "sidebar",
    "shadcn"
  ],
  "license": "MIT",
  "type": "module",
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tokens.css": "./dist/tokens.css",
    "./animations.css": "./dist/animations.css",
    "./theme.css": "./dist/tokens.css",
    "./tailwind-preset": {
      "types": "./dist/tokens.tailwind.preset.d.ts",
      "import": "./dist/tokens.tailwind.preset.js",
      "require": "./dist/tokens.tailwind.preset.cjs"
    }
  },
  "peerDependencies": {
    "@radix-ui/react-collapsible": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-tooltip": "^1.0.0",
    "@radix-ui/react-visually-hidden": "^1.0.0",
    "lucide-react": "^0.441.0",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@radix-ui/react-collapsible": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-tooltip": "^1.0.0",
    "@radix-ui/react-visually-hidden": "^1.0.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "autoprefixer": "^10.4.20",
    "design-tokens-sync": "^1.4.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "jest-axe": "^9.0.0",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.10",
    "tsup": "^8.0.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts && npm run build:assets",
    "build:assets": "mkdir -p dist && cp src/styles/animations.css dist/animations.css && cp src/styles/tokens.css dist/tokens.css && cp tokens.tailwind.preset.js dist/ && cp tokens.tailwind.preset.cjs dist/",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest",
    "strip:publish": "find dist -name '*.map' -delete && find dist -name '*.d.cts' -delete && rm -f dist/shadcn-theme.css dist/typography.css dist/tailwind-preset.js dist/tailwind-preset.cjs dist/tailwind-preset.d.ts dist/tailwind-preset.d.cts",
    "tokens:init": "design-tokens-sync init",
    "tokens:sync": "design-tokens-sync sync",
    "tokens:watch": "design-tokens-sync watch",
    "tokens:validate": "design-tokens-sync validate",
    "tokens:analytics": "design-tokens-sync analytics report",
    "prepublishOnly": "npm run tokens:sync && npm run build && npm run strip:publish"
  },
  "publishConfig": {
    "access": "public"
  }
}
